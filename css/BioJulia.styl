@import 'jeet'



bp = 600px

headernav(c)
  &:hover
    border-bottom 5px solid c

.svglink
  pointer-events none

.textlink
  font-family 'Sinhala MN'
  color #3a3a3aff
  margin-left 40px
  font-weight 100
  font-size 2.2em
  &:link
    color black
    text-decoration none
  &:hover
    color black
.textlink.purple
    headernav(#945bb0ff)
.textlink.red
    headernav(#c93d39ff)
.textlink.blue
    headernav(#4266d5ff)
.textlink.green
    headernav(#3b972eff)


#navbar
  span(1/1)
  +above(bp)
    position fixed
    height 100px
  background rgba(255, 255, 255, 0.9)
  border-bottom 3px solid rgba(0, 0, 0, 0.1)

  #logo
    height 100%
    +above(bp)
      span(1/5)
    +below(bp)
      span(1/1)
    img
      center()
      height 100%
      padding-top 5px
      padding-bottom 5px

  #links
    +above(bp)
      span(4/5)
      padding-top 28px
    +below(bp)
      center()
      span(1/1)
      a
        span(1/4)
        text-align center

.pkglogo
  img
    center()
  +above(bp)
    col(1/3)
    position fixed
    margin-top 150px
    img
      width 80%
  +below(bp)
    margin-top 20px
    col(1/1)
    img
      width 50%

.descpanel
  font-family 'Sinhala MN'
  color #3a3a3aff
  +above(bp)
    col(2/3)
    shift(1/3)
    margin-top 150px
